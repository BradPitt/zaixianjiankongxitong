@model Entity.USERINFO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-treeview.css" rel="stylesheet">
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootbox.min.js"></script>
    <script src="~/js/bootstrap-treeview.js"></script>
    <script src="~/js/bootstrap-validator/js/validator.min.js"></script>
    <title>修改用户</title>
</head>
<body>
    <div class="container" style="margin-top: 2%;">
        <form data-toggle="validator" role="form">
            <button type="submit" class="btn btn-primary" id="btn-submit">提交</button>
            <button type="button" class="btn btn-default" onclick="history.back();">返回</button>
            <input type="hidden" name="user-account" value="@Model.F_ACCOUNT"/>
            <div class="form-group">
                <label for="inputName" class="control-label">用户名</label>
                <input title="用户名" type="text" class="form-control" id="inputName" name="userName" required pattern="^[_A-z0-9]{1,}$" maxlength="15" data-error="用户名重复或非法!" data-remote="ValidateUsername" value="@Model.F_NAME"/>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
                <label for="F_REALNAME" class="control-label">真实姓名</label>
                <input type="text" class="form-control" id="F_REALNAME" required maxlength="20" value="@Model.F_REALNAME"/>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="control-label">密码</label>
                <div class="form-inline row">
                    <div class="form-group col-sm-6">
                        <input type="password" data-minlength="6" class="form-control" id="inputPassword" placeholder="密码" required value="@Model.F_PASSWORD"/>
                        <div class="help-block">最短6位数</div>
                    </div>
                    <div class="form-group col-sm-6">
                        <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#inputPassword" data-match-error="两次输入的密码不一致!" placeholder="确认密码" required value="@Model.F_PASSWORD"/>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="control-label">邮箱</label>
                <input type="email" class="form-control" id="inputEmail" data-error="邮箱格式不正确!" required value="@Model.F_EMAIL"/>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
                <label for="F_PHONE" class="control-label">固话</label>
                <input type="tel" class="form-control" id="F_PHONE" maxlength="20" title="固话" pattern="^(\(\d{3,4}\)|\d{3,4}-|\s)?\d{7,14}$" data-error="固话格式不正确!" value="@Model.F_PHONE"/>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
                <label for="F_TEL" class="control-label">手机</label>
                <input type="text" class="form-control" id="F_TEL" required title="手机" pattern="^1[34578]\d{9}$" maxlength="20" data-error="手机号格式不正确!" value="@Model.F_TEL"/>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group">
                <label for="department" class="control-label">部门</label>
                <input type="text" class="form-control" id="department" required data-toggle="modal" data-target="#deptModal" />
            </div>

            <div class="form-group">
                <label for="inputRoles" class="control-label">角色</label>
                <input type="text" class="form-control" id="inputRoles" required data-toggle="modal" data-target="#roleModal" value="@Model.F_ACCOUNT"/>
            </div>

            <div class="form-group">
                <label for="F_DESCRIPTION" class="control-label">说明</label>
                <textarea rows="3" class="form-control" id="F_DESCRIPTION" maxlength="200">@Model.F_DESCRIPTION</textarea>
            </div>
            <div class="form-group">
                <label for="F_ADDRESS" class="control-label">住址</label>
                <textarea rows="3" class="form-control" id="F_ADDRESS" maxlength="200">@Model.F_ADDRESS</textarea>
            </div>

        </form>
    </div>

    <div id="deptModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">请选择部门</h4>
                </div>
                <div class="modal-body">
                    <div id="treeview1"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">确定</button>
                </div>
            </div>
        </div>
    </div>

    <div id="roleModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">请选择角色</h4>
                </div>
                <select id="roles" multiple class="form-control"></select>
                <div class="help-block">按住Ctrl(Windows)/Command(Mac), 或者按住鼠标左键滑动, 以进行多选</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">确定</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
<script src="~/js/Manager/userEdit.js"></script>
