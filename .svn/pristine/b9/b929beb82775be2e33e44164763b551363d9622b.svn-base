html, body 
{
    width:100%;
    height:100%;
    margin:0;
    padding:0;
}

#ToolBar
{
    position:absolute;
    top:60px;
    right:20px;
    height:32px;
    width:300px;
    z-index:999;
    background-color:White;    
}
#ToolBar ul
{
    list-style:none;
    margin-top:0px;
    margin-left:5px;
    
}
#ToolBar li
{
    display:inline;
    line-height:32px;
}
ul li img:hover
{
    background-color:#d2e7f9;
    cursor:pointer;
}
ul li img:focus
{
    background-color:#c3e0f9;
}
#MapDiv
{
    position:relative;
    height:100%;
    width:100%;

}
.esriPopup .titleButton.maximize
{
    display:none;
}
.esriPopup .titlePane
{
    background-color:#0b83f3 !important;
}

#LayerControl
{
    z-index:99;
    float: left; 
    margin-top: 10px; 
    background-color: white;
    position: absolute;
    left:0;
    bottom:0;   
}

#Legend
{
    z-index:99;
    float: right; 
    margin-top: 10px; 
    background-color: white;
    position: absolute;
    right:0;
    bottom:0;   
}

#layerTree
{
    width: 200px; 
    height: 250px;
    overflow:auto;
}
#layerTree::-webkit-scrollbar{
    width: 6px;
    background-color: #e8e9ed;
}
#layerTree::-webkit-scrollbar-thumb{
    border-radius: 6px;
    background-color: #a2cff8;
}
#layerTree::-webkit-scrollbar-track{
    border-radius: 6px;
    background-color: #e8e9ed;
}
#legenddiv
{
    width: 200px; 
    height: 250px;
    overflow:auto;
}
#legenddiv::-webkit-scrollbar{
    width: 6px;
    background-color: #e8e9ed;
}
#legenddiv::-webkit-scrollbar-thumb{
    border-radius: 6px;
    background-color: #a2cff8;
}
#legenddiv::-webkit-scrollbar-track{
    border-radius: 6px;
    background-color: #e8e9ed;
}
.title
{
    background: -webkit-linear-gradient(center top, #22a2ec, #0580c7);
    background: -moz-linear-gradient(center top, #22a2ec, #0580c7);
    background: -o-linear-gradient(center top, #22a2ec, #0580c7);
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#22a2ec), to(#0580c7));
    background: linear-gradient(center top, #22a2ec, #0580c7);
    color:white;
    height:30px;
    width: 200px; 
    line-height:30px;
    text-align:center;
    vertical-align:middle;
}