html, body 
{
    width:100%;
    height:100%;
    margin:0;
    padding:0;
}

#ToolBar
{
    position:absolute;
    top:20px;
    right:20px;
    height:32px;
    width:300px;
    z-index:999;
    background-color:White;    
}
#ToolBar ul
{
    list-style:none;
    margin-top:0px;
    margin-left:5px;
    
}
#ToolBar li
{
    display:inline;
    line-height:32px;
}
ul li img:hover
{
    background-color:#d2e7f9;
    cursor:pointer;
}
ul li img:focus
{
    background-color:#c3e0f9;
}
#mapContainer
{
    position:relative;
    height:100%;
    width:100%;
}
#MapDiv
{
    position:absolute;
    top:30px;
    left:0px;
    right:0px;
    bottom:0px;

}
.esriPopup .titleButton.maximize
{
    display:none;
}
.esriPopup .titlePane
{
    background-color:#0b83f3 !important;
}